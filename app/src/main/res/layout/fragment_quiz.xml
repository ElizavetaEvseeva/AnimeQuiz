<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    >

    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/default_quiz_picture"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_gravity="center"
        android:contentDescription="Makima"
        />

    <Button
        android:id="@+id/idButtonAnswer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:padding="5dp"
        android:textSize="20sp"
        android:text="Evangelion"/>

    <Button
        android:id="@+id/idButtonAnswer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:padding="5dp"
        android:textSize="20sp"
        android:text="Evangelion"/>
    <Button
        android:id="@+id/idButtonAnswer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:padding="5dp"
        android:textSize="20sp"
        android:text="Evangelion"/>
    <Button
        android:id="@+id/idButtonAnswer4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:padding="5dp"
        android:textSize="20sp"
        android:text="Evangelion"/>

    <TextView
        android:id="@+id/idTextViewProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="5/10"
        android:textAlignment="center"
        android:textColor="#474747"
        android:textSize="15sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/idButtonAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:padding="5dp"
            android:textSize="20sp"
            android:backgroundTint="@color/teal_200"
            android:text="О тайтле"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/idButtonNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_200"
            android:padding="5dp"
            android:text="Далее"
            android:textSize="20sp"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />
</LinearLayout>
